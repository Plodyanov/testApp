<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_text_input</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="button_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_item_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="title_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/title_default</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="page1_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">11dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/page1_title_text</item>
    </style>

    <style name="page1_view_all">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">11dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="ShapeAppearance.Circle" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="profile_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:background">@drawable/bg_profile_menu_item</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textColor">@color/profile_item_text</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>